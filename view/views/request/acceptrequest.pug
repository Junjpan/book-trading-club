extend ../layout
block content
    .container
        h6 We will send over your contact information listed as below to #{request.requestusername} for shipping purpose.
        h6 Please make sure that you fill out the form completely. If you didn't hear back from #{request.requestusername} in 7 days. You can authorize us to cancel the transaction. 
        hr.divider 
        form.message(method="post", action="/trade/"+id)
            h5.form-group
                lead.text-light USERNAME: 
                input.form-control(name="username",value=user.username readonly)          
            h5
                lead.text-light FUll NAME: 
                input.form-control(name="fullname",value=user.fullname required)  
            h5
                lead.text-light  EMAIL: 
                input.form-control(name="email",value=user.email required)
            h5    
                lead.text-light  ADDRESS: 
                input.form-control(name="address",value=user.address required)
            h5
                lead.text-light CITY: 
                input.form-control(name="city",value=user.city required)  
            h5
                lead.text-light STATE: 
                input.form-control(name="state",value=user.state required )
            h5
                lead.text-light ZIP CODE: 
                input.form-control(name="zipcode", required )    
            h5  
                lead.text-light  MESSAGE: 
                input.form-control(name="message",type="text" )    
            hr.divider
            button.btn.btn-primary(type="submit") Comfirm    
                